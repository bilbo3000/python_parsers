#!/usr/bin/python

from HTMLParser import HTMLParser; 
    
class MyHTMLParser(HTMLParser): 
    # encounter a start tag
    def handle_starttag(self, tag, attrs): 
        global isDiv; 
        global isSpan;  
        global isName; 
        global isHint; 
        if tag == "div" and attrs[0][0] == "class" and attrs[0][1] == "pref": 
            isDiv = 1; 
        if tag == "span": 
            if attrs[0][0] == "class" and attrs[0][1] == "name": 
                isSpan = 1;
                isName = 1;  
            if attrs[0][0] == "class" and attrs[0][1] == "hint":
                isSpan = 1;
                isHint = 1;  
            
    # encounter a end tag
    def handle_endtag(self, tag):
        global isDiv; 
        global isSpan; 
        global isName; 
        global isHint; 
        if tag == "div" and isDiv == 1: 
            isDiv = 0; 
            isName = 0; 
            isHint = 0;
        if tag == "span" and isSpan == 1:
            isSpan = 0;
            isName = 0; 
            isHint = 0; 
        
    # encounter a data field
    def handle_data(self, data): 
        global isDiv; 
        global isSpan; 
        global isName; 
        global isHint; 
        if isDiv and isSpan: 
            if isName: 
                print "Name: ", data; 
                isSpan = 0; 
                isName = 0; 
            if isHint: 
                print "Hint: ", data; 
                isSpan = 0;   
                isHint = 0; 
 
  
# instantiate a parser instance       
parser = MyHTMLParser();  

# open file for parsing
filepath = "/home/djin/work/prefparser/preferential.html";
inputfile = open(filepath);
html = inputfile.read(); # read input file
isDiv= 0; 
isSpan = 0;
isName = 0; 
isHint = 0; 
parser.feed(html); 

parser.close(); 

